block content
	.all.border.main
		.contact
			header
				h1.header-contact.center.white-text Contact Us

			//- .row
			//- .col-md-12
			//- 	small
			//- 	.alert.alert-success.hidden
			//- 		strong
			//- 			span.glyphicon.glyphicon-send
