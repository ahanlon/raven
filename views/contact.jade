extends index

block content
	.container
		.row
		.col-md-12
			small
			.alert.alert-success.hidden
				strong
					span.glyphicon.glyphicon-send
					|  Success! Message sent. (If form ok!)
			.alert.alert-danger.hidden
				span.glyphicon.glyphicon-alert
				strong  Error! Please check the inputs. (If form error!)
		form(role='form', action='', method='post')
			.col-lg-6
				.well.well-sm
					strong
						i.glyphicon.glyphicon-ok.form-control-feedback
						|  Required Field
				.form-group
					label(for='InputName') Your Name
					.input-group
						input#InputName.form-control(type='text', name='InputName', placeholder='Enter Name', required='')
						span.input-group-addon
							i.glyphicon.glyphicon-ok.form-control-feedback
				.form-group
					label(for='InputEmail') Your Email
					.input-group
						input#InputEmail.form-control(type='email', name='InputEmail', placeholder='Enter Email', required='')
						span.input-group-addon
							i.glyphicon.glyphicon-ok.form-control-feedback
				.form-group
					label(for='InputMessage') Message
					.input-group
						textarea#InputMessage.form-control(name='InputMessage', rows='5', required='')
						span.input-group-addon
							i.glyphicon.glyphicon-ok.form-control-feedback
				.form-group
					label(for='InputReal') What is 4+3? (Simple Spam Checker)
					.input-group
						input#InputReal.form-control(type='text', name='InputReal', required='')
						span.input-group-addon
							i.glyphicon.glyphicon-ok.form-control-feedback
				input#submit.btn.btn-info.pull-right(type='submit', name='submit', value='Submit')
		hr.featurette-divider.hidden-lg
		.col-lg-5.col-md-push-1
			address
			h3 Office Location
			p.lead
				a(href='https://www.google.com/maps/place/Engineering+Center,+1111+Engineering+Dr,+Boulder,+CO+80309/@40.0071697,-105.2648959,17z/data=!3m1!4b1!4m2!3m1!1s0x876bedcb99bb71b9:0xadccadbd9ea75dc7')
					| 1111 Engineering Drive
					br
					| ECOT 318, 530 UCB
					br
					| Boulder, CO 80309-0530
				br
				|       Phone: 303-492-8475

