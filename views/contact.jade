			//- 	.alert.alert-danger.hidden
			//- 		span.glyphicon.glyphicon-alert
			//- 		strong  Error! Please check the inputs. (If form error!)
			form(role='form', action='https://formspree.io/levi@raveninnovation.com', method='POST')
				.col-lg-3
				.col-lg-6
					.form-group
						label.white-text(for='InputName') Your Name
						.input-group
							input#inputName.form-control(type='text', name='RealName', placeholder='Enter Name', required='')
							span.input-group-addon
								i.glyphicon.glyphicon-ok.form-control-feedback
					.form-group
						label.white-text(for='InputEmail') Your Email
						.input-group
							input#inputEmail.form-control(type='email', name='email', placeholder='Enter Email', required='')
							span.input-group-addon
								i.glyphicon.glyphicon-ok.form-control-feedback
					.form-group
						label.white-text(for='InputMessage') Message
						.input-group
							textarea#inputMessage.form-control(name='InputMessage', rows='5', required='')
							span.input-group-addon
								i.glyphicon.glyphicon-ok.form-control-feedback
					.form-group
						.input-group
							input#inputRecipient.form-control(type='hidden' name="_cc" value='andrew@raveninnovation.com')
						.input-group
							input#inputRedirect.form-control(type='hidden' name='_next', value='http://www.raveninnovation.com')
						.input-group
							input#gotcha.form-control(type='text' name='_gotcha' style='display:none')
					input#submit.btn.btn-info.pull-right(type='submit')
			if(typeof msg !== 'undefined')
				if(!!err)
					div(class='msgbox err') #{msg}
				else
					div(class='msgbox success') #{msg}
